<Window
    x:Class="StockStratMemes.DatasetView.DatasetViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="#00001a"
    Left="100"
    Top="100"
    Width="1800" Height="1000"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- First row -->
        <Menu Name="_menu">
            <MenuItem Header="_File">
                <MenuItem Header="_Export" Click="OnExportClicked" />
                <MenuItem Header="_Close" Click="OnCloseClicked" />
            </MenuItem>
        </Menu>

        <!-- Second row -->
        <Canvas 
            Grid.Row="1" 
            Name="_graphCanvas" 
            Background="White"
            ClipToBounds="true"
            SizeChanged="OnGraphSizeChanged" 
            MouseEnter="OnMouseEntered" 
            MouseLeave="OnMouseLeft" 
            MouseMove="OnMouseMoved"
            MouseUp="OnMouseUp"
            MouseDown="OnMouseDown"
            MouseWheel="OnMouseWheel" />
    </Grid>
</Window>
